---
interface Props {
    src: string;
    alt?: string;
    loading?: "lazy" | "eager";
    decoding?: "sync" | "async";
    width?: string;
    height?: string;
    rounded?: boolean;
}

const {
    src,
    alt = src,
    loading = "lazy",
    decoding = "async",
    width = "100%",
    height = "100%",
    rounded = true,
    ...rest
} = Astro.props;
---

<img
    src={src}
    alt={alt}
    loading={loading}
    decoding={decoding}
    width={width}
    height={height}
    data-rounded={rounded.toString()}
    {...rest}
/>

<style lang="scss">
    img[data-rounded="true"] {
        border-radius: 50%;
    }
</style>
